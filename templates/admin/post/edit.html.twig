{% extends 'admin/base.html.twig' %}


{% block body %}
    <div class="container">
        <header class="header">
            <div class="heading-area header__heading-area">
                <h1 class="heading-area__title">Mettre à jour le post {{ post.title }}</h1>
            </div>

        </header>

        {#        {% for message in app.flashes('remove_message') %}#}
        {#            <div class="alert alert-primary d-flex align-items-center alert-dismissible" role="alert" style="z-index: 10;">#}
        {#                <i class="ri-information-fill fa-2x"></i>{{ message }}#}
        {#                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>#}
        {#            </div>#}
        {#        {% endfor %}#}
    </div>
    <section class="section-form py-5 my-5">
        <div class="container-fluid px-5">
            {{ form_start(edit_post_form) }}
            <div class="row">
                <div class="col-lg-5 col-md-6 col-sm-10">
                    <div class="mb-3">
                        {{ form_row(edit_post_form.title) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(edit_post_form.postBanner) }}
                        <img src="{{ asset('images/post/banner/' ~ post.imageIllustration) | imagine_filter('post_edit') }}"
                             alt="
                            Illustration de  {{ post.title }}" class="mt-3 img-fluid">
                    </div>
                    <div class="mb-3">
                        {{ form_row(edit_post_form.video) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(edit_post_form.category) }}
                    </div>
                </div>
                <div class="col-lg-7 col-md-6 col-sm-10">
                    <div class="mb-3">
                        {{ form_row(edit_post_form.content) }}
                    </div>
                    <div class="d-grid gap-2 my-5">
                        <button type="submit" class="btn btn-outline-light btn-lg rounded-0">Mettre à jour <span
                                    class="material-icons-sharp">post_add</span></button>
                        <a href="{{ path('post_list') }}" class="text-center theme-text mt-1 mx-2">Liste des posts</a>
                    </div>
                </div>
            </div>
            {{ form_end(edit_post_form) }}
        </div>
    </section>
{% endblock %}

{% block title %}
    Modifier l'article {{ post.title }}
{% endblock %}



